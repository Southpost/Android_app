<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/mise"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:src="@drawable/dial_coloer_picker_cha" />

        <com.yc.peddemo.onlinedial.CustomDialGridView
            android:id="@+id/gvColorPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:listSelector="@android:color/transparent"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="20dp"
            android:numColumns="13"></com.yc.peddemo.onlinedial.CustomDialGridView>
    </LinearLayout>
</RelativeLayout>